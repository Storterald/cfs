{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 5,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "PRESETS_PROFILE": "ON",
        "CMAKE_C_STANDARD": "99",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      },
      "warnings": {
        "unusedCli": false
      }
    },
    {
      "name": "gcc",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_FLAGS": "-m64",
        "CMAKE_CXX_FLAGS": "-m64"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "MinGW"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "inherits": "common",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "clang-sanitize",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_FLAGS": "-m64 $env{DEBUG_FLAGS} $env{SANITIZE_FLAGS}",
        "CMAKE_CXX_FLAGS": "-m64 $env{DEBUG_FLAGS} $env{SANITIZE_FLAGS}",
        "CMAKE_EXE_LINKER_FLAGS": "$env{SANITIZE_FLAGS}"
      },
      "environment": {
        "SANITIZE_FLAGS": "-fno-omit-frame-pointer -fsanitize=address",
        "DEBUG_FLAGS": "-gdwarf-4"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "MinGW Clang"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "gcc-test",
      "displayName": "GCC Test",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "gcc-test-release",
      "displayName": "GCC Test Release",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-test",
      "displayName": "MSVC Test",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "msvc-test-release",
      "displayName": "MSVC Test Release",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-debug-sanitize",
      "displayName": "Clang Sanitize",
      "inherits": "clang-sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-test-build",
      "displayName": "GCC Test",
      "configuration": "Debug",
      "configurePreset": "gcc-test"
    },
    {
      "name": "gcc-test-release-build",
      "displayName": "GCC Test Release",
      "configuration": "Release",
      "configurePreset": "gcc-test"
    },
    {
      "name": "gcc-release-build",
      "displayName": "GCC Release",
      "configuration": "Release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "msvc-test-build",
      "displayName": "MSVC Test",
      "configuration": "Debug",
      "configurePreset": "msvc-test"
    },
    {
      "name": "msvc-test-release-build",
      "displayName": "MSVC Test Release",
      "configuration": "Release",
      "configurePreset": "msvc-test"
    },
    {
      "name": "msvc-release-build",
      "displayName": "MSVC Release",
      "configuration": "Release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "clang-sanitize-build",
      "displayName": "Clang Sanitize",
      "configuration": "Debug",
      "configurePreset": "clang-debug-sanitize"
    }
  ]
}