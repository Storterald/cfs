{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 5,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "PRESETS_PROFILE": "ON",
        "CMAKE_C_STANDARD": "99",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      },
      "warnings": {
        "unusedCli": false
      }
    },
    {
      "name": "gcc",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_FLAGS": "-m64",
        "CMAKE_CXX_FLAGS": "-m64"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "MinGW GCC"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "gcc-test",
      "displayName": "GCC Test",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "gcc-test-release",
      "displayName": "GCC Test Release",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "inherits": "gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-test-build",
      "displayName": "GCC Test",
      "configuration": "Debug",
      "configurePreset": "gcc-test"
    },
    {
      "name": "gcc-test-release-build",
      "displayName": "GCC Test Release",
      "configuration": "Release",
      "configurePreset": "gcc-test"
    },
    {
      "name": "gcc-release-build",
      "displayName": "GCC Release",
      "configuration": "Release",
      "configurePreset": "gcc-release"
    }
  ]
}